<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.tobias.uno.gui.ClientGuiController"
            prefHeight="400.0" prefWidth="600.0">
    <children>
        <AnchorPane accessibleText="k" maxHeight="-1.0" maxWidth="-1.0" prefHeight="400.0" prefWidth="639.0" VBox.vgrow="ALWAYS">
            <children>
                <ListView fx:id="cards" layoutY="200.0" prefHeight="200.0" prefWidth="268.0" onMouseClicked="#onClickList"/>
                <Button fx:id="layCardButton" layoutX="320.0" layoutY="252.0" mnemonicParsing="false" onMouseClicked="#clickLayCardButton" text="Lay card" />
                <Button fx:id="drawCardButton" layoutX="328.0" layoutY="332.0" mnemonicParsing="false" text="Draw" onMouseClicked="#clickDrawButton"/>
                <Label layoutX="254.0" layoutY="30.0" text="Deck count:" />
                <Label layoutX="254.0" layoutY="87.0" text="Card on table:" />
                <Label layoutX="449.0" layoutY="30.0" text="Current legal color" />
                <Label fx:id="countLabel" layoutX="341.0" layoutY="30.0" text="count" />
                <Label fx:id="cardLabel" layoutX="343.0" layoutY="87.0" text="card" />
                <Label fx:id="colorLabel" layoutX="554.0" layoutY="30.0" text="color" />
                <Label fx:id="c" layoutX="554.0" layoutY="30.0" text="color" />
                <ComboBox disable="true" layoutX="449.0" layoutY="252.0" prefWidth="150.0" promptText="Select cardColor" visibleRowCount="4" fx:id="suits" />
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
